<div id="holidays">
  <h3>Upcoming Holidays:</h3>
  <ul>
    <% NagerDateService.holidays.each do |holiday, date| %>
      <li><%= holiday %>, coming up on <%= date %></li>
    <% end %>
  </ul>
</div>

<h2>Discount #<%= @bulk_discount.id %></h2>

<p>Percentage Discount: <%= @bulk_discount.percentage_discount %>%, Quantity Threshold: <%= @bulk_discount.quantity_threshold %></p>

<%= link_to "Edit This Bulk Discount", "/merchants/#{@bulk_discount.merchant.id}/bulk_discounts/#{@bulk_discount.id}/edit" %>
