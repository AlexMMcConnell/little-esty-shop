<h1>Edit Item</h1>
<%= form_with url: "/merchants/#{@item.merchant_id}/items/#{@item.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @item.name, required: true  %><br>


  <%= f.label :description %>
  <%= f.text_field :description, value: @item.description, size: 75, required: true %><br>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, value: @item.unit_price.to_s, required: true %>

  <%= f.submit %>
<% end %>
