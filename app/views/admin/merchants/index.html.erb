<h1>Merchants</h1>

<h3>Enabled Merchants</h3>
<ul id="enabled_merchants">
  <% @merchants.enabled.each_with_index do |merchant, index| %>
    <li id="merchant_<%=index%>">
      <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}"  %>
        <%= form_with url: "/admin/merchants/#{merchant.id}", method: :patch, local: true do |f| %>
          <%= f.submit "Disable" %>
          <%= f.hidden_field :disable, value: 'true' %>
        <% end %>
    </li>
  <% end %>
</ul>

<h3>Disabled Merchants</h3>
<ul id="disabled_merchants">
  <% @merchants.disabled.each_with_index do |merchant, index| %>
    <li id="merchant_<%=index%>">
      <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}"  %>
        <%= form_with url: "/admin/merchants/#{merchant.id}", method: :patch, local: true do |f| %>
          <%= f.submit "Enable" %>
          <%= f.hidden_field :enable, value: 'true' %>
        <% end %>
    </li>
  <% end %>
</ul>
